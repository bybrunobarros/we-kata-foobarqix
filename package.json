{
  "name": "we-kata-foobarqix",
  "version": "0.0.0",
  "description": "FooBarQix kata in JavaScript",
  "main": "index.js",
  "scripts": {
    "format": "prettier --check ./**/*.js",
    "format:fix": "prettier --write",
    "lint": "eslint ./**/*.js",
    "lint:fix": "eslint --cache --fix",
    "test": "ava",
    "test:coverage": "c8 --reporter=lcovonly ava",
    "test:watch": "ava --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bybrunobarros/we-kata-foobarqix.git"
  },
  "author": "Bruno Barros",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/bybrunobarros/kata/issues"
  },
  "homepage": "https://github.com/bybrunobarros/kata#readme",
  "devDependencies": {
    "ava": "^3.12.1",
    "c8": "^7.3.5",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1"
  },
  "engines": {
    "node": ">=14"
  },
  "type": "module",
  "prettier": {
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    }
  },
  "ava": {
    "extensions": [
      "js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "npm run format:fix"
    ]
  }
}
